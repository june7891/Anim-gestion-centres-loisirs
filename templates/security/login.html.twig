{% extends 'base.html.twig' %}

{% block title %}Anim+ | Connexion{% endblock %}

{% block body %}
  {% include '_partials/_nav.html.twig' %}


 <section class="login-section" id="screen-height">

 <div class='login-form'>


    
           <form class='form' method='post'>
             {% if error %}
        <div class="alert alert-danger msg-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 msg-loggedin">
            Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

            <input class='mb-20' type="email" value="{{ last_username }}" name="email" placeholder='Email'required/>
    
            <input class="mb-20" type="password" name='password' placeholder='Mot de passe' required/>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}" >

            
      
            <button class='login-btn' type='submit' >Se connecter</button>
            <br>
            <div class='forget-password'><a href="/reset-password">Mot de passe oublié?</a></div>
            

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

           </form>

 </div>

 </section>




 
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Anim+ | Connexion{% endblock %}

{% block body %}
 {% include '_partials/_nav.html.twig' %}

 <div class='login-form'>


    
           <form class='form' method='post'>
             {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

            <input class='mb-20' type="email" value="{{ last_username }}" name="email" placeholder='Email' autocomplete="email" required/>
    
            <input class="mb-20" type="password" name='password' placeholder='Mot de passe' autocomplete="current-password" required/>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}" >
      
            <button class='login-btn' type='submit' >Se connecter</button>
            

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

           </form>

 </div>




   
        
            
       
   
    <div class='bottom-page'>
 
    </div>













 
{% endblock %}
